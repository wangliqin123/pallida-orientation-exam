@model List<SpringBootApp.Models.LicencePlate>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <table>
        <tr>
            <td>ID</td>
            <td>Plate</td>
            <td>Car Brand</td>
            <td>Car Model</td>
            <td>Car Color</td>
            <td>Year</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Plate</td>
                <td>
                    <form action="/search/@item.CarBrand" method="get">
                        <h3><a href="/search/@item.CarBrand"> [@item.CarBrand]</a></h3>
                        <input type="hidden" name="CarBrand" value="@item.CarBrand" />
                    </form>                  
                </td>
                <td>@item.CarModel</td>
                <td>@item.Color</td>
                <td>@item.Year</td>               
            </tr>
        }
    </table>
    <h1>Search for plate</h1>
    <form action="/search" method="get">
        <h2>Plate: </h2>
        <label for="Plate"></label>
        <input type="text" name="inputPlate" value="[Required format: XXX-000]" />

        <br><button type="submit">Search</button>

        <h2><a href="/search">Police cars only</a></h2>
        <input type="hidden" name="police" />

        <h2><a href="/search" type="text/asp">Diplomats only</a></h2>
        <input type="hidden" name="diplomat"/>
    </form>
</body>
</html>